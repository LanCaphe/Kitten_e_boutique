<br>
<h3>Hello <%= current_user.username %> here are your previous orders</h3>
  <% @orders.each do |order| %>
  <% order_price = 0%>
  <h4>Order  #<%= order.id %> created on the <%= order.created_at %></h4>
  <tr>
      <ul>
        <% order.items.each do |item| %>
          <% order_price += item.price %>
          <li> <%= item.title %> </li>
        <% end %>
      </ul>
  </tr>
  <p>Total price: $<%= order_price %></p>
  <br>
  <% end %>

